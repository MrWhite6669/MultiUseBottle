    </append>

    <append xpath="/lootcontainers/lootcontainer[item[@name='drinkYuccaJuiceSmoothie'] and not(item[@group='MSpecialDrinks'])]">
        <item group="MSpecialDrinks" count="1,3" level="1,300" loot_prob_template="MUltraRareProb"/>
        <item group="MSpecialDrinksX6" count="1" prob="0.01"/>
    </append>

    <append xpath="/lootcontainers/lootcontainer[item[@name='foodRawMeat'] and not((item[@group='MRawMeat'] or item[@name='MRawFood']))]">
        <item group="MRawMeat" loot_prob_template="MCommonProb"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[item[@name='foodRawMeat'] and not((item[@group='MRawMeat'] or item[@name='MRawFood']))]">
        <item group="MRawMeat" loot_prob_template="MCommonProb"/>
    </append>

