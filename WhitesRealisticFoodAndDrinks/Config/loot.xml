    <append xpath="/lootcontainers/lootcontainer[@name='shamwayCrate' and not(item[@group='MRawFood'])]">
        <item group="MRawFood" count="4" loot_prob_template="MRareProb"/>
    </append>

    <append xpath="/lootcontainers/lootcontainer[@name='shamwayCrate' and not(item[@group='MCookingIngredients'])]">
        <item group="MCookingIngredients" count="1,3" loot_prob_template="MCommonProb"/>
