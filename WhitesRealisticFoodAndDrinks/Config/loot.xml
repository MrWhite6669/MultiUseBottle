<configs>

    <append xpath="/lootcontainers/lootprobtemplates">
        <lootprobtemplate name="MCommonProb">
            <loot level="1,30" prob="0.4"/>
            <loot level="31,60" prob="0.6"/>
            <loot level="61,90" prob="0.8"/>
            <loot level="91,999999" prob="1"/>
        </lootprobtemplate>

        <lootprobtemplate name="MRareProb">
            <loot level="1,30" prob="0.1"/>
            <loot level="31,60" prob="0.3"/>
            <loot level="61,90" prob="0.5"/>
            <loot level="91,999999" prob="0.7"/>
        </lootprobtemplate>

        <lootprobtemplate name="MVeryRareProb">
            <loot level="1,30" prob="0.05"/>
            <loot level="31,60" prob="0.15"/>
            <loot level="61,90" prob="0.25"/>
            <loot level="91,999999" prob="0.35"/>
        </lootprobtemplate>

        <lootprobtemplate name="MUltraRareProb">
            <loot level="1,30" prob="0.01"/>
            <loot level="31,60" prob="0.05"/>
            <loot level="61,90" prob="0.1"/>
            <loot level="91,999999" prob="0.2"/>
