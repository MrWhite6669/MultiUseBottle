    <!--Loot Groups Append-->
    <append xpath="/lootcontainers/lootgroup[@name='groupFoodTrash']">
        <item name="MEmpty_Bottle2L" count="1,1" loot_prob_template="veryLow"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupDrinksCommon']">
        <item group="MTrashDrinks" count="1" prob=".15"/>
        <item group="MCommonDrinks" count="1" prob=".3"/>
        <item group="MSpecialDrinks" count="1" prob=".15"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupToilet01']">
        <item group="MTrashDrinks" count="1" prob=".2"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='drinks']">
        <item group="MCommonDrinks" count="1" prob="0.2"/>
        <item name="MWater_Bottle2L6X" count="1,1" prob="0.01"/>

        <item group="MSpecialDrinks" count="1" prob=".1"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupBuriedStashChest']">
        <item group="MCommonDrinks" count="1" prob="0.3"/>
        <item name="MWater_Bottle2L6X" count="1,1" prob="0.1"/>
    </append>

     <append xpath="/lootcontainers/lootgroup[@name='groupChem01']">
        <item group="MCommonDrinks" count="1" prob="0.2"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupSodaFountain01']">
        <item group="MCommonDrinks" count="1" prob=".4"/>
        
        <item group="MSpecialDrinks" count="1" prob=".4"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='rareFoodDrink']">
        <item group="MSpecialDrinks" count="1" prob=".6"/>
        <item group="MSpecialDrinksX6" count="1" prob=".01"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupDrinksRare']">
        <item group="MSpecialDrinks" count="1" prob=".6"/>
        <item group="MSpecialDrinksX6" count="1" prob=".01"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupIngredientsRare']">
        <item group="MRawMeat" loot_prob_template="MRareProb"/>
        <item group="MCookingIngredients" loot_prob_template="MCommonProb"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupIngredientsCommon']">
        <item group="MCookingIngredients" loot_prob_template="MCommonProb"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupFoodCommon']">
        <item group="MCookingIngredients" loot_prob_template="MCommonProb"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupRefrigerator01']">
        <item group="MRawFood" loot_prob_template="MCommonProb"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupRefrigerator02']">
        <item group="MRawFood" loot_prob_template="MCommonProb"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupGrills']">
        <item group="MCookedFood" loot_prob_template="MRareProb"/>
    </append>

    <!-- Patches for containers not containing loot groups or items from this mod-->
    <append xpath="/lootcontainers/lootcontainer[item[@name='drinkCanEmpty'] and not(item[@group='MEmpty_Bottle2L'])]">
        <item name="MEmpty_Bottle2L" count="1,5" level="1,300" loot_prob_template="MCommonProb"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[item[@name='drinkCanEmpty'] and not(item[@name='MEmpty_Bottle2L'])]">
        <item name="MEmpty_Bottle2L" count="1,5" level="1,300" loot_prob_template="MCommonProb"/>
    </append>

    <append xpath="/lootcontainers/lootcontainer[item[@name='drinkJarRiverWater'] and not(item[@group='MTrashDrinks'])]">
        <item group="MTrashDrinks" count="1,3" level="1,300" loot_prob_template="MCommonProb"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[item[@name='drinkJarRiverWater'] and not(item[@group='MTrashDrinks'])]">
        <item group="MTrashDrinks" count="1,3" level="1,300" loot_prob_template="MCommonProb"/>
    </append>

    <append xpath="/lootcontainers/lootcontainer[item[@name='drinkJarBoiledWater'] and not(item[@group='MCommonDrinks'])]">
